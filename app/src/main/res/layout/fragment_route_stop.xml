<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteStop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="60sp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search"
                android:layout_width="210sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginRight="20sp"
                android:background="@drawable/edit_text_decoration"
                android:fontFamily="@font/aleo_light"
                android:hint="Stop Location..."
                android:inputType="text"
                android:paddingLeft="20sp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/searchLocation"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/navy"
                android:fontFamily="@font/mandali"
                android:text="Search"
                android:textSize="18sp"
                app:cornerRadius="4sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/panel_text_input_fav_routes"
            android:fontFamily="@font/comfortaa"
            android:paddingLeft="10sp"
            android:paddingRight="20sp"
            android:text="Stop Location:"
            android:textColor="@color/navy"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/input_field_title"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edit_text_decoration"
            android:ems="10"
            android:fontFamily="@font/aleo_light"
            android:hint="Insane Route!"
            android:inputType="text"
            android:paddingLeft="20sp" />

        <TextView
            android:id="@+id/text_lat_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/panel_text_input_decoration"
            android:fontFamily="@font/comfortaa"
            android:paddingLeft="10sp"
            android:paddingRight="20sp"
            android:text="Latitude:"
            android:textColor="@color/navy"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/input_field_lat_routes"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edit_text_decoration"
            android:ems="10"
            android:fontFamily="@font/aleo_light"
            android:hint="60.129..."
            android:inputType="text"
            android:paddingLeft="20sp" />

        <TextView
            android:id="@+id/text_long_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:layout_marginLeft="20sp"
            android:background="@drawable/panel_text_input_decoration"
            android:fontFamily="@font/comfortaa"
            android:paddingLeft="10sp"
            android:paddingRight="20sp"
            android:text="Longitude:"
            android:textColor="@color/navy"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/input_field_long_routes"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edit_text_decoration"
            android:ems="10"
            android:fontFamily="@font/aleo_light"
            android:hint="120.984..."
            android:inputType="text"
            android:paddingLeft="20sp" />

        <Button
            android:id="@+id/submit_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="40sp"
            android:backgroundTint="@color/navy"
            android:bottomLeftRadius="0sp"
            android:bottomRightRadius="0sp"
            android:fontFamily="@font/mandali"
            android:text="Submit"
            android:textSize="18sp"
            app:cornerRadius="4sp" />

    </LinearLayout>
</FrameLayout>